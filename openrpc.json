{
  "openrpc": "1.0.0-rc0",
  "info": {
    "version": "0.0.1",
    "title": "EnOS OpenRPC API",
    "description": "EnOS backend based on OpenRPC \n \n ![ethernode-logo](https://dev.ethernode.io/assets/img/brand/Header-Light.png)",
    "termsOfService": "https://ethernode.io/terms/",
    "contact": {
